---
const { text } =  Astro.props;
---
<div class="chip">
    <p>{text}</p>
</div>

<style>
    .chip {
        display: inline-block;
        padding: 5px 20px;
        font-size: 16px;
        border-radius: 25px;
        border: solid 3px #FF5733
    }
    .chip p {
        display: inline-block;
        margin: 0;
    }
</style>