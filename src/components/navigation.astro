---
const options = [{ path: '/', title: 'Home'}];
---
<div
class="navbar"
> 
        {options.map((p: any) => 
         <div class="group">
            <a href={p.path}>{p.title}</a>
            <div
              class="mx-2 mt-2 duration-500 border-b-2 opacity-0 border-black group-hover:opacity-100"
            ></div>
        </div>
        )}
</div>

<style>
.navbar {
  display: flex;
  width:100%;
  justify-content: flex-start;
  gap: 5rem;
  padding: 1rem;
  background-color: #f3f4f6;
}
</style>